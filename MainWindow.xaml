        xmlns:local="clr-namespace:currency"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="59,58,0,0" Text="Input: " TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBox x:Name="input" HorizontalAlignment="Left" Margin="114,58,0,0" Text="0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" />
        <TextBlock  HorizontalAlignment="Left" Margin="59,92,0,0" Text="Output: " TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock x:Name="output" HorizontalAlignment="Left" Margin="114,92,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Button Content="Convert to text" HorizontalAlignment="Left" Margin="262,56,0,0" VerticalAlignment="Top" Click="Button_Click"/>

    </Grid>
</Window>
